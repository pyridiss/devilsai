<?xml version="1.0" encoding="UTF-8"?>
<window>
    <loadImage key="gui-top-border" path="img/gui-top-border.png"/>
    <loadImage key="button-ingame-menu" path="img/gui-menu-button.png"/>
    <loadImage key="button-character" path="img/BoutonPersonnage.png"/>
    <loadImage key="button-equipment" path="img/BoutonEquipement.png"/>
    <loadImage key="button-skills" path="img/BoutonCompetences.png"/>
    <loadImage key="button-journal" path="img/BoutonJournal.png"/>
    <loadImage key="button-rest" path="img/gui-rest-button.png"/>
    <properties width="100" WidthRelativeToScreenSize="1" height="50" backgroundImage="gui-top-border" RepeatBackgroundToFitSize="1"/>
    <widget name="button-ingame-menu" type="button" x="10" y="2" width="41" height="41" allBackground="button-ingame-menu" AdjustBackgroundToSize="1">
        <state name="hover" foregroundShader="highlight"/>
    </widget>
    <widget name="button-character" type="button" x="60" y="2" width="41" height="41" allBackground="button-character" AdjustBackgroundToSize="1">
        <state name="hover" foregroundShader="highlight"/>
    </widget>
    <widget name="button-equipment" type="button" x="110" y="2" width="41" height="41" allBackground="button-equipment" AdjustBackgroundToSize="1">
        <state name="hover" foregroundShader="highlight"/>
    </widget>
    <widget name="button-skills" type="button" x="160" y="2" width="41" height="41" allBackground="button-skills" AdjustBackgroundToSize="1">
        <state name="hover" foregroundShader="highlight"/>
    </widget>
    <widget name="button-journal" type="button" x="210" y="2" width="41" height="41" allBackground="button-journal" AdjustBackgroundToSize="1">
        <state name="hover" foregroundShader="highlight"/>
    </widget>
    <widget name="warn-journal" type="text" x="210" y="2" width="41" height="41">
        <state name="warn" foregroundShader="warn"/>
    </widget>
    <widget name="button-rest" type="button" x="260" y="2" width="41" height="41" allBackground="button-rest" AdjustBackgroundToSize="1">
        <state name="hover" foregroundShader="highlight"/>
        <state name="disabled" foregroundShader="disable"/>
    </widget>
    <widget name="place-name" type="text" OriginCenter="1" XPositionRelativeToCenter="1" y="120">
        <addEmbeddedData name="format" value="format-place-name"/>
    </widget>
    <widget name="tooltip" type="text">
        <state name="normal" backgroundShader="textBackground"/>
        <addEmbeddedData name="format" value="format-tooltip"/>
    </widget>
    <signal emitter="button-ingame-menu" signal="ask-menu"/>
    <signal emitter="button-character" signal="screen-character"/>
    <signal emitter="button-equipment" signal="screen-equipment"/>
    <signal emitter="button-skills" signal="screen-skills"/>
    <signal emitter="button-journal" signal="screen-journal"/>
    <signal emitter="button-rest" signal="rest"/>
    <keyboardSignal key="12" signal="ask-menu"/> <!-- 'M' -->
    <keyboardSignal key="18" signal="savegame"/> <!-- 'S' -->
    <keyboardSignal key="17" signal="rest"/> <!-- 'R' -->
    <keyboardSignal key="16" signal="ask-exit"/> <!-- 'Q' -->
    <keyboardSignal key="0" signal="screen-character"/> <!-- 'A' -->
    <keyboardSignal key="4" signal="screen-equipment"/> <!-- 'E' -->
    <keyboardSignal key="10" signal="screen-skills"/> <!-- 'K' -->
    <keyboardSignal key="9" signal="screen-journal"/> <!-- 'J' -->
    <signalListener signal="ingame-toolbar:disable-rest" widget="button-rest" state="disabled"/>
    <signalListener signal="ingame-toolbar:enable-rest" widget="button-rest" state="normal"/>
    <signalListener signal="ingame-toolbar:warn-journal" widget="warn-journal" state="warn"/>
    <signalListener signal="ingame-toolbar:remove-warn-journal" widget="warn-journal" state="normal"/>
</window>

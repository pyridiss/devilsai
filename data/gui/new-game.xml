<?xml version="1.0" encoding="UTF-8"?>
<window>
    <loadImage key="dialog-background-488x308" path="img/gui-dialog-background-488x308.png"/>
    <loadImage key="button-background-156x46" path="img/gui-button-background-156x46.png"/>
    <loadImage key="input-field-background-356x46" path="img/gui-input-field-background-356x46.png"/>
    <properties xCenterOfScreen="1" yCenterOfScreen="1" width="488" height="308" backgroundImage="dialog-background-488x308" backgroundFullscreenShader="disable"/>
    <widget name="question" type="text" xCenter="244" yCenter="50" allText="new-game-title" textSize="24" textFont="dayroman"/>
    <widget name="answer" type = "input-field" xCenter="244" yCenter="120" width="356" height="46" allBackground="input-field-background-356x46" textSize="18" textFont="dayroman"/>
    <widget name="button-back" type="button" xTopLeft="20" yTopLeft="242" width="156" height="46" allBackground="button-background-156x46" allText="new-game-back" textSize="12" textFont="liberation-bold"/>
    <widget name="button-tutorial" type="button" xTopLeft="312" yTopLeft="192" width="156" height="46" allBackground="button-background-156x46" allText="new-game-tutorial" textSize="12" textFont="liberation-bold">
        <addEmbeddedData name="value" value="chapitre/tutorial.xml"/>
    </widget>
    <widget name="button-devilsai" type="button" xTopLeft="312" yTopLeft="242" width="156" height="46" allBackground="button-background-156x46" allText="new-game-chapter1" textSize="12" textFont="liberation-bold">
        <addEmbeddedData name="value" value="chapitre/devilsai.xml"/>
    </widget>
    <signal emitter="button-back" signal="main-menu"/>
    <signal emitter="button-tutorial" signal="start-new-game" dataProvider="button-tutorial"/>
    <signal emitter="button-devilsai" signal="start-new-game" dataProvider="button-devilsai"/>
    <signal emitter="button-tutorial" signal="change-player-name" dataProvider="answer"/>
    <signal emitter="button-devilsai" signal="change-player-name" dataProvider="answer"/>
    <exitWindowSignal emitter="button-back"/>
    <exitWindowSignal emitter="button-tutorial"/>
    <exitWindowSignal emitter="button-devilsai"/>
</window>

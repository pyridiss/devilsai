<?xml version="1.0" encoding="UTF-8"?>
<window>
    <loadImage key="dialog-background-608x383" path="img/gui-dialog-background-608x383.png"/>
    <loadImage key="button-background-156x46" path="img/gui-button-background-156x46.png"/>
    <loadImage key="dropdownlist-background-156x34" path="img/gui-dropdownlist-background-156x34.png"/>
    <properties OriginCenter="1" PositionRelativeToCenter="1" width="608" height="383" backgroundImage="dialog-background-608x383" backgroundFullscreenShader="disable"/>
    <widget name="title" type="text" OriginCenter="1" XPositionRelativeToCenter="1" y="50" allText="options-title"/>
    <widget name="question-language" type="text" OriginCenter="1" x="184" y="100" allText="options-choose-language"/>
    <widget name="question-resolution" type="text" OriginCenter="1" x="184" y="150" allText="options-choose-resolution"/>
    <widget name="question-fullscreen" type="text" OriginCenter="1" x="184" y="200" allText="options-choose-fullscreen"/>
    <widget name="question-console" type="text" OriginCenter="1" x="184" y="250" allText="options-choose-console-display"/>
    <widget name="chooser-language" type="drop-down-list" OriginCenter="1" x="424" y="100" width="156" height="34" allBackground="dropdownlist-background-156x34">
        <addEntry text="options-language-en" data="EN"/>
        <addEntry text="options-language-fr" data="FR"/>
    </widget>
    <widget name="chooser-resolution" type="drop-down-list" OriginCenter="1" x="424" y="150" width="156" height="34" allBackground="dropdownlist-background-156x34">
        <addEntry text="options-resolution-1" data="800x600"/>
        <addEntry text="options-resolution-2" data="1024x768"/>
        <addEntry text="options-resolution-3" data="1280x800"/>
    </widget>
    <widget name="chooser-fullscreen" type="drop-down-list" OriginCenter="1" x="424" y="200" width="156" height="34" allBackground="dropdownlist-background-156x34">
        <addEntry text="options-enabled" data="enabled"/>
        <addEntry text="options-disabled" data="disabled"/>
    </widget>
    <widget name="chooser-console" type="drop-down-list" OriginCenter="1" x="424" y="250" width="156" height="34" allBackground="dropdownlist-background-156x34">
        <addEntry text="options-enabled" data="enabled"/>
        <addEntry text="options-disabled" data="disabled"/>
    </widget>
    <widget name="button-back" type="button" x="20" y="317" width="156" height="46" allBackground="button-background-156x46" allText="new-game-back"/>
    <widget name="button-apply" type="button" x="432" y="317" width="156" height="46" allBackground="button-background-156x46" allText="options-apply"/>
    <trigger sender="button-back" event="WidgetActivated" action="SendSignal" signal="main-menu"/>
    <trigger sender="button-back" event="WidgetActivated" action="ExitWindow"/>
    <trigger sender="button-apply" event="WidgetActivated" action="SendSignal" signal="option-change-language" dataProvider="chooser-language" dataName="value"/>
    <trigger sender="button-apply" event="WidgetActivated" action="SendSignal" signal="option-change-resolution" dataProvider="chooser-resolution" dataName="value"/>
    <trigger sender="button-apply" event="WidgetActivated" action="SendSignal" signal="option-change-fullscreen" dataProvider="chooser-fullscreen" dataName="value"/>
    <trigger sender="button-apply" event="WidgetActivated" action="SendSignal" signal="option-change-console" dataProvider="chooser-console" dataName="value"/>
    <trigger sender="button-apply" event="WidgetActivated" action="SendSignal" signal="main-menu"/>
    <trigger sender="button-apply" event="WidgetActivated" action="ExitWindow"/>
</window>
